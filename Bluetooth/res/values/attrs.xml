<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Theme">
        <attr name="switchStyle"
              format="reference"/>
    </declare-styleable>

    <declare-styleable name="Switch">
        <attr name="thumb"
              format="reference"/>

        <attr name="track"
              format="reference"/>

        <attr name="textOn"
              format="reference"/>

        <attr name="textOff"
              format="reference"/>

        <attr name="thumbTextPadding"
              format="dimension"/>

        <attr name="switchTextAppearance"
              format="reference"/>

        <attr name="switchMinWidth"
              format="dimension"/>

        <attr name="switchPadding"
              format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TextAppearance">
        <attr name="android:textColor"/>

        <attr name="android:textSize"/>

        <attr name="android:textStyle"/>

        <attr name="android:typeface"/>

        <attr name="android:textColorHighlight"/>

        <attr name="android:textColorHint"/>

        <attr name="android:textColorLink"/>

        <attr name="textAllCaps"
              format="boolean"/>
    </declare-styleable>
</resources>